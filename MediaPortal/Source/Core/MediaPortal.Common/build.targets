<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

  <PropertyGroup>
    <AppDestination Condition="$(SolutionName) != '' And $(SolutionName) != '*Undefined*'">$(SolutionDir)..\Bin\$(SolutionName)\$(OutDir)</AppDestination>
  </PropertyGroup>

  <ItemGroup>
    <References Include="$(TargetDir)log4net.dll"/>
    <References Include="$(TargetDir)Microsoft.WindowsAPICodePack.dll"/>
    <References Include="$(TargetDir)Microsoft.WindowsAPICodePack.Shell.dll"/>
  </ItemGroup>

  <Target Name="AfterBuild">
    <Copy Condition="$(AppDestination) != ''"
          SourceFiles="@(References)" DestinationFolder="$(AppDestination)" />
  </Target>

</Project>